<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-booking text-dark mt-3 mb-3 mx-n3">
        <%= simple_form_for [event, booking] do |f| %>
          <%= f.label :number_of_guests, 'Number of guests' %>
          <%= f.input :number_of_guests, label: false, input_html: {class: "select2"}, collection: 1..10, selected: params[:events][:guests].to_i %>
          <%= f.label :date, 'Date' %>
          <%= f.input :date, label: false, required: false, input_html: {value: params[:events][:date], class: "datepicker"} %>
          <%= f.submit "Reserve now", class: "btn-submit bg-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
