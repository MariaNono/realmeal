<div class="container-profile">

  <div class="profile-banner">

    <div class="profile-grey">
    </div>

    <div class="profile-yellow">
    </div>

    <div class="profile-description">
      <div class="profile-image">
        <%if @user.photo? %>
          <%= cl_image_tag (@user.photo) %>
        <% else %>
          <%= image_tag "https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60", class: "profile-img" %>
        <% end %>
      </div>

        <div class="panel-title-container">
          <div class="panel-title">
          <h2><%= "#{@user.first_name.capitalize} #{@user.last_name.capitalize}" %></h2>
          <p>If more of us valued food and cheer and song above hoarded gold,<br> it would be a merrier world</p>
            <div class="footer-links-profle">
              <a href="#"><i class="fab fa-github fa-sm"></i></a>
              <a href="#"><i class="fab fa-instagram fa-sm"></i></a>
              <a href="#"><i class="fab fa-facebook fa-sm"></i></a>
            </div>





        <h2>User description</h2>
        <%= @user.description %>
      </div>
    </div>



    <div class="picture-container">
      <h3>Past event pictures</h3>
        <div class="row justify-content-center">
        <%#if @event.photo? %>
        <%#= cl_image_tag @event.photo %>
        <%# else %>
          <div class="col-3">
            <%= image_tag ("https://images.unsplash.com/photo-1567056602606-6172dedda3ac?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80"), class: "show-picture"%>
          </div>
          <div class="col-3">
            <%= image_tag ("https://images.unsplash.com/photo-1533959938354-70634c231c21?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80"), class: "show-picture"%>
          </div>
          <div class="col-3">
            <%= image_tag ("https://images.unsplash.com/photo-1543807669-0d0730e95cb3?ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80"), class: "show-picture"%>
          </div>
        </div>
      </div>
        <%# end %>


        <section class="section-profile">
          <h3 class="section-title-profile">Reviews</h3>
          <% @reviews = [] %>
          <% @user_events.each do |event| %>
            <% event.reviews.each do |review| %>
              <%  @reviews << review %>
            <% end %>
          <% end %>
          <% if @reviews.any? %>
            <% @reviews.each do |review| %>
              <div class="review">
                <div class='review-stars'>
                  <% review.rating.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                </div>
                <p class='review-content'><%= review.content %></p>
                <p class='section-subtitle'><!-- <strong>Posted by:</strong> --> <%= review.booking.user.first_name %></p>
              </div>
            <% end %>
          <% else %>
            <p>There are no reviews for the host yet</p>
          <% end %>
        </section>
        </div>
      </div>
    </div>
