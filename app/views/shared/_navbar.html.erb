<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <div class='brand-name'>Real</div>
    <%= image_tag "icon.png", class: "logo-img" %>
    <div class='brand-name'>Meal</div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item">
          <%= link_to "Browse all experiences", events_path(events: {address: ''}), class: "nav-link underline-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "Become a host", new_event_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My bookings", mybookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My experiences", myhostings_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%if current_user.photo? %>
            <%= cl_image_tag current_user.photo, class: "avatar-xs dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag ("https://myspace.com/common/images/user.png"), class: "avatar-xs dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% user_guest = User.find_by(id: current_user) %>
            <%= link_to "My profile", profile_path(user_guest.id), class: "dropdown-item" %>
            <%#= link_to "My bookings", "#", class: "dropdown-item" %>
            <%#= link_to "My hosting", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
