<div class="container-event">
    <h3>Edit your event</h3>
    <%= link_to "Browse all events", events_path(events: {address: ''}) %>
  </div>
  <div class="row">
      <div class="form-login">
        <%= simple_form_for @event do |f| %>
          <%= f.input :cuisine %>
          <%= f.input :event_date %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :max_guests %>
          <%= f.input :price_per_guest %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Create Event"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
