
<div class="container mt-3 mb-5">
  <div class="mt-1 d-flex justify-content-between align-items-center">
      <h3>Edit your event</h3>
    <%= link_to "Browse all events", events_path(events: {address: ''}), class: "btn outline-btn" %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-login text-dark mt-3 mb-3">
       <%= simple_form_for @event do |f| %>
          <%= f.label :cuisine %>
         <%= f.input :cuisine, as: :select, label: false, required: false, input_html: { class: "select2"},
          collection: ['', 'Chinese', 'French', 'German',' Italian', 'Indian', 'Japanese', 'Korean', 'Peruvian', 'Spanish']%>
          <%= f.input :event_date %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.label :max_guests %>
          <%= f.input :max_guests, label: false, input_html: { class: "select2" }, collection: 1..10 %>
          <%= f.input :price_per_guest %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Edit Event"%>
          <% end %>
      </div>
    </div>
  </div>
</div>
