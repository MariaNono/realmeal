<div class="container">
   <h3 class='section-title'>Add your event</h3>
  <div class="event-form">
    <%= simple_form_for @event do |f| %>
      <%= f.label :cuisine %>
      <%= f.input :cuisine, as: :select, label: false, required: false, input_html: { class: "select2"},
       collection: Nationality::NATIONALITY %>
      <%= f.input :event_date, input_html: { class: "datepicker" } %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.label :max_guests %>
      <%= f.input :max_guests, label: false, input_html: { class: "select2" }, collection: 1..10 %>
      <%= f.input :price_per_guest %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create Event", class: "btn btn-info block full-width" %>
    <% end %>
  </div>
</div>
