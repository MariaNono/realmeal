<div class="container">
      <%cuisine = params[:events][:cuisine] if !params[:events].nil?%>
      <%number_of_guests = params[:events][:guests] if !params[:events].nil?%>
      <%date = params[:events][:date] if !params[:events].nil?%>
      <div class="search-form">
        <%= simple_form_for :events, url: events_path, method: "get" do |f| %>
          <%= f.label :cuisine, 'Cuisine type' %>
          <%= f.input :cuisine, as: :select, label: false, required: false, input_html: { class: "select2"}, prompt: " ", collection: @cuisines, selected: params[:events][:cuisine] %>
          <%= f.label :date, 'Dates' %>
          <%= f.input :date, label: false, required: false, input_html: {value: date, class: "datepicker"} %>
          <%= f.label :number_of_guests, 'Number of guests' %>
          <%= f.input :number_of_guests, label: false, input_html: { class: "select2" }, collection: 1..10, selected: params[:events][:number_of_guests] %>
          <%= f.button :submit, "Find experiences", class: "btn btn-danger" %>
        <% end %>
      </div>
      <!-- <p class = "btn btn-info" id="events-map-button">Map</p> -->
      <div class="buttons" style='align-items: baseline; justify-content: space-between; padding: 0 10px'>
        <h3 class="section-subtitle" style='margin-top: 30px;'>Upcoming experiences</h3>
      <button class="btn outline-btn" value="Show Map", id="events-map-button">Show Map</button>
      </div>

    <div>
      <div id="map-container"  class="hidden">
        <%= render 'shared/map' %>
      </div>
      <div id="events-list-show" class="">
        <div class="cards-grid">
          <% @events.each do |event| %>
            <%= render 'shared/event_card', event: event%>
          <% end %>
        </div>
      </div>
    </div>
</div>





